<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/addact_item_padbottom">

            <EditText
                android:id="@+id/et_now"
                android:layout_width="@dimen/item_et_width"
                android:layout_height="@dimen/item_et_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/item_et_marginTop"
                android:background="@drawable/et_shape"
                android:inputType="numberSigned|numberDecimal"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#bcbcbc"
                android:textSize="@dimen/item_et_textsize"/>

            <EditText
                android:id="@+id/et_last"
                android:layout_width="@dimen/item_et_width"
                android:layout_height="@dimen/item_et_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/item_et_marginTop"
                android:background="@drawable/et_shape"
                android:inputType="numberSigned|numberDecimal"
                android:hint="上一期"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#bcbcbc"
                android:textSize="@dimen/item_et_textsize"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingBottom="@dimen/addact_item_padbottom">

            <RelativeLayout
                android:id="@+id/rlyt_year_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_et_height"
                android:layout_marginTop="@dimen/item_et_marginTop"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_year_one1"
                    android:layout_width="@dimen/item_et_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/item_et_marginLR"
                    android:background="@drawable/et_shape"
                    android:hint="上一年"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textColorHint="#bcbcbc"
                    android:textSize="@dimen/item_et_textsize"/>

                <EditText
                    android:id="@+id/et_year_one2"
                    android:layout_width="@dimen/item_et_width"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_shape"
                    android:hint="上二年"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textColorHint="#bcbcbc"
                    android:textSize="@dimen/item_et_textsize"/>

                <EditText
                    android:id="@+id/et_year_one3"
                    android:layout_width="@dimen/item_et_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/item_et_marginLR"
                    android:background="@drawable/et_shape"
                    android:hint="上三年"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textColorHint="#bcbcbc"
                    android:textSize="@dimen/item_et_textsize"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlyt_year_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_et_height"
                android:layout_marginTop="@dimen/item_et_marginTop"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_year_two1"
                    android:layout_width="@dimen/item_et_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/item_et_marginLR"
                    android:background="@drawable/et_shape"
                    android:hint="每股收益1"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textColorHint="#bcbcbc"
                    android:textSize="@dimen/item_et_textsize"/>

                <EditText
                    android:id="@+id/et_year_two2"
                    android:layout_width="@dimen/item_et_width"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_shape"
                    android:hint="每股收益2"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textColorHint="#bcbcbc"
                    android:textSize="@dimen/item_et_textsize"/>

                <EditText
                    android:id="@+id/et_year_two3"
                    android:layout_width="@dimen/item_et_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/item_et_marginLR"
                    android:background="@drawable/et_shape"
                    android:hint="每股收益3"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textColorHint="#bcbcbc"
                    android:textSize="@dimen/item_et_textsize"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_et_height"
                android:layout_marginTop="@dimen/item_et_marginTop">

                <EditText
                    android:id="@+id/addact_et_source"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_shape"
                    android:enabled="false"
                    android:hint=" 0"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textColorHint="#bcbcbc"
                    android:textSize="@dimen/item_et_textsize"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/addact_et_source"
                    android:text="分"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/btn_count"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/item_et_marginLR"
                    android:text="计算"
                    android:textSize="8sp"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#000000"/>
</LinearLayout>